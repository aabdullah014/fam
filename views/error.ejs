<% layout('layouts/boilerplate') %>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <%= err.message %>
                </h4>
                <p>
                    <% if (process.env.NODE_ENV !=="production" ) { %>
                        <%= err.stack %>
                            <% } %>
                </p>
                <hr>
                <p class="mb-0">Error</p>
            </div>
        </div>
    </div>