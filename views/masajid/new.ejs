<!--form to create new masjid with boilerplate-->
<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Add New Masjid</h1>
        <div class="col-6 offset-3">
            <form action="/masajid" method="POST" class="validated-form" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label for="name" class="form-label">Name <span class="text-danger">*</span></label>
                    <input class="form-control" type="text" , id="name" , name="masjid[name]" required>
                    <div class="valid-feedback">
                        Awesome!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a masjid name.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="street" class="form-label">Address<span class="text-danger">*</span></label>
                    <input class="form-control" type="text" , id="name" , name="masjid[street]" required>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="mb-3 col-9">
                            <label for="city" class="form-label">City<span class="text-danger">*</span></label>
                            <input class="form-control" type=" text" , id="city" , name="masjid[city]"
                                placeholder="San Francisco" required>
                            <div class="valid-feedback">
                                Thanks!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a city.
                            </div>
                        </div>
                        <div class="mb-3 col-3">
                            <label for="state" class="form-label">State<span class="text-danger">*</span></label>
                            <input class="form-control" type=" text" , id="state" , name="masjid[state]"
                                placeholder="CA" required>
                            <div class="valid-feedback">
                                Thanks!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a state in abbreviated format.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="zipcode" class="form-label">Zipcode<span class="text-danger">*</span></label>
                    <input class="form-control" type="number" , id="zipcode" , name="masjid[zipcode]"
                        placeholder="94110" required>
                    <div class="valid-feedback">
                        Thanks!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid zipcode.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input class="form-control" type="number" , id="phone" , name="masjid[phone]"
                        placeholder="123456789">
                    <label for="Description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="masjid[description]"
                        placeholder="The Imam gives the best Khutbahs!"></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add some pictures!</label>
                    <input class="form-control" type="file" id="image" name="masjid[image]"
                        value="https://images.unsplash.com/photo-1494616150024-f6040d5220c0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80"
                        multiple>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Masjid</button>
                </div>
            </form>

            <a href="/masajid">All Masajid</a>
        </div>
    </div>

    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                const forms = document.getElementsByClassName('validated-form');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>